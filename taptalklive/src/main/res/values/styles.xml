<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ttlColorPrimary</item>
        <item name="colorPrimaryDark">@color/ttlColorPrimaryDark</item>
        <item name="colorAccent">@color/ttlColorAccent</item>
        <item name="android:statusBarColor">@color/ttlColorPrimary</item>
    </style>

    <style name="Theme.AppCompat.Transparent.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/ttl_bg_review_layout</item>
    </style>

    <style name="ttlFontFamilyLight">
        <item name="android:fontFamily">@font/ttl_font_pt_root_light</item>
    </style>

    <style name="ttlFontFamilyRegular">
        <item name="android:fontFamily">@font/ttl_font_pt_root_regular</item>
    </style>

    <style name="ttlFontFamilyMedium">
        <item name="android:fontFamily">@font/ttl_font_pt_root_medium</item>
    </style>

    <style name="ttlFontFamilyBold">
        <item name="android:fontFamily">@font/ttl_font_pt_root_bold</item>
    </style>

    <style name="ttlFormLabelStyle" parent="ttlFontFamilyBold">
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textColor">@color/ttlFormLabelColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ttlFormLabelOptionalStyle" parent="ttlFontFamilyRegular">
        <item name="android:letterSpacing">-0.01</item>
